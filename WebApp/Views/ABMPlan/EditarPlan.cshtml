@model List<LibreriaClases.DTO.DTOPlan>
@{
    ViewBag.Title = "CrearPlan";
    Layout = "~/Views/Shared/MasterPanelAdministrador.cshtml";
}



<div class="container text-center">
    <h2>Aquí podrás crear los planes que necesites.</h2>
    @for (int i = 0; i < Model.Count(); i++)
    {

    <form action="/ABMPlan/EditarPlan" method="post" class="border">
        <div class="row">
            <div class="col-4">
                <label>Nombre del Plan</label>
                <input type="text" placeholder="Nombre" name="NombrePlan" value="@Model.ElementAt(i).nombrePlan" />
            </div>
        </div>
        <input type="hidden" value="@Model.ElementAt(i).planId" name="planId" />
        <div class="row">
            <div class="col-8">
                <label>Precio</label>
                <input class="col-2" type="number" value="@Model.ElementAt(i).precioPlan" min="0" name="Precio" />
                <label>Seleccione el tipo de moneda</label>
                <select name="TipoMoneda">
                    @for (int x = 0; x < Model.Count(); x++)
                    {
                        <option value="@Model.ElementAt(x).tipoMonedaId">@Model.ElementAt(x).tipoMoneda.denominacionMoneda</option>
                    }
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <label>Cantidad de Créditos</label>
                <input type="number" value="@Model.ElementAt(i).cantidadCreditosIniciales" min="0" name="CantCreditos" />
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label>Acá van las características definidas por las reglas de negocio.</label>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <label>Cantidad de imágenes permitidas al publicar</label>
                <input type="number" value="@Model.ElementAt(i).cantidadMaxImagenesPermitidasPorPublicacion" name="CantImage" />
            </div>
        </div>
        <div class="row">
            <div class="col-12 d-flex flex-column">
                <label>¿Permitir subir videos?<input class="ml-3" type="checkbox" value="@Model.ElementAt(i).permiteVideo" name="PermitirVideo" /></label>
                <label>¿Permitir acceso a estadísticas avanzadas?<input class="ml-3" type="checkbox" name="PermitirEstadisticas" value="@Model.ElementAt(i).accesoEstadisticasAvanzadas" /></label>
            </div>
        </div>


        <div class="row">
            <div class="col">
                <button class="btn btn-danger" type="submit">Modificar</button>
            </div>

        </div>
    </form>
    
    
     }
</div>