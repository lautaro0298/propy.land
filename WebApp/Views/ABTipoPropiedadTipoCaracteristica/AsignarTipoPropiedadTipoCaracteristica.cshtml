
@{

    ViewBag.Title = "Asignar a una propiedad una caracteristica";
    Layout = "~/Views/Shared/MasterPanelAdministrador.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        @if (!String.IsNullOrEmpty(ViewBag.Error))
        {
            <div class="alert alert-danger">
                <button class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                @Html.ValidationSummary(false)
            </div>
        }
        <h2>Aquí podras configurar cada propiedad con sus caracteristicas correspondientes</h2>
        <form action="/ABTipoPropiedadTipoCaracteristica/AsignarTipoPropiedadTipoCaracteristica" method="post">
            <div class="container-fluid">
                <div class="row">
                    <div class="col">
                        <select class="form-control" name="TipoPropiedad">
                            <option value="-1">Seleccione una opción</option>
                            @foreach (var tipoProp in Model.Item1)
                            {
                                <option value="@tipoProp.tipoPropiedadId" name=tipopropiedad>@tipoProp.nombreTipoPropiedad</option>
                                
                            }

                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <table>
                            <select class="form-control" name="caracteristica">
                                @foreach (var caracteristica in Model.Item2)
                                {


                                    <option type="checkbox" value="@caracteristica.caracteristicaId" name="Caracteristica" >
                                    @caracteristica.nombreCaracteristica</option>
                                    

                                }
                            </select>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4 ">
                        <button class="btn-danger" type="submit">Aceptar</button>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label id="resultadoOperacion"></label>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
