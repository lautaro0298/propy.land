@{
    ViewBag.Title = "CrearCuenta";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <div class="row mt-5">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <form action="@Url.Action("CrearCuenta","Usuario")" method="post" enctype="multipart/form-data" novalidate>
                <div class="card border-dark">
                    <div class="card-header bg-dark">
                        <h1 class="text-center text-light">Registro</h1>
                    </div>
                    <div class="card-body bg-secondary text-light">
                        @if (!String.IsNullOrEmpty(ViewBag.Error))
                        {
                            <div class="alert alert-danger">
                                <button class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                            </div>
                        }
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="nombreUsuario" class="form-label">Nombres</label>
                                <input class="form-control" type="text" name="nombreUsuario" id="nombreUsuario" placeholder="Nombres" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="apellidoUsuario" class="form-label">Apellidos</label>
                                <input class="form-control" type="text" name="apellidoUsuario" id="apellidoUsuario" placeholder="Apellidos" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input class="form-control" type="email" name="email" id="email" value="" placeholder="Email" required autocomplete="email">
                            </div>
                            <!--<div class="col-md-6 mb-3">
                                <input class="form-control" type="number" name="CUIT" placeholder="CUIT" />
                            </div>-->
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="clave" class="form-label">Clave</label>
                                <input class="form-control" type="password" name="clave" id="clave" value="" placeholder="Clave" required autocomplete="new-password">
                                <small class="text-warning">La clave debe tener al menos una letra mayúscula, un número y un carácter especial (¬/+-)</small>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="claveRepetida" class="form-label">Clave (otra vez)</label>
                                <input class="form-control" type="password" name="claveRepetida" id="claveRepetida" value="" placeholder="Clave (otra vez)" required autocomplete="new-password">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="telefono1" class="form-label">Teléfono 1</label>
                                <input class="form-control" type="tel" name="telefono1" id="telefono1" value="" placeholder="Teléfono 1" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="telefono2" class="form-label">Teléfono 2 (opcional)</label>
                                <input class="form-control" type="tel" name="telefono2" id="telefono2" value="" placeholder="Teléfono 2 (opcional)">
                            </div>
                        </div>

                        <div class="form-check form-check-inline mb-3">
                            <input class="form-check-input" type="checkbox" id="permitirSerContactadoPorPublicante" name="permitirSerContactadoPorPublicante" value="true" required>
                            <input type="hidden" name="permitirSerContactadoPorPublicante" value="false" />
                            <label class="form-check-label" for="permitirSerContactadoPorPublicante">Quiero ser contactado por los publicantes.</label>
                        </div>

                        <div class="form-check form-check-inline mb-3">
                            <input class="form-check-input" type="checkbox" id="permitirSerNotificado" name="permitirSerNotificado" value="true" required>
                            <input type="hidden" name="permitirSerNotificado" value="false" />
                            <label class="form-check-label" for="permitirSerNotificado">Quiero ser notificado por Propy</label>
                        </div>

                    </div>
                    <div class="card-footer bg-dark">
                        <center>
                            <input class="btn btn-lg btn-outline-success" type="submit" name="submit" value="Enviar" aria-label="Enviar">
                        </center>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-3">
        </div>
    </div>
</div>
