
@{
    ViewBag.Title = "ReenvioMailVerificacion";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

    <div class="container">
        @if (!String.IsNullOrEmpty(ViewBag.Mensaje))
        {
            <div class="alert alert-info mt-5">
                <h4>Propy le envió un mail al correo ingresado, por favor revise su bandeja de entrada.</h4>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-md-3">

                </div>
                <div class="col-md-6">
                    <form action="@Url.Action("ReenvioMailVerificacion","Usuario")" method="post">


                        <div class="card mt-5 mb-5">
                            <div class="card-header bg-dark">
                                <h2 class="text-center text-light">Confirmar cuenta</h2>
                            </div>
                            <div class="card-body bg-light border-dark">
                                @if (!String.IsNullOrEmpty(ViewBag.Error))
                                {
                                    <div class="alert alert-danger">
                                        <button class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                    </div>
                                }
                                <div class="row justify-content-center">
                                    <div class="col-md-6">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="inputGroup-sizing-default"><i class="fas fa-user"></i></span>
                                            </div>
                                            <input type="email" class="form-control" name="email" placeholder="Ingrese su email" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                                        </div>
                                    </div>


                                </div>

                            </div>
                            <div class="card-footer bg-dark">
                                <center>
                                    <input type="submit" class="btn btn-lg btn-outline-success" value="Enviar" />
                                </center>
                            </div>
                        </div>
                    </form>

                </div>
                <div class="col-md-3">

                </div>
            </div>
        }
    </div>

