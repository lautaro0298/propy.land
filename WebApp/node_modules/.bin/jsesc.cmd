@echo off
call :find_dp0

if exist "%dp0%\node.exe" (
  set "_prog=%dp0%\node.exe"
) else (
  set "_prog=node"
  set "PATHEXT=%PATHEXT:;.JS;=;%"
)

endlocal & (title %COMSPEC% & "%_prog%" "%dp0%\..\jsesc\bin\jsesc" %*) || goto :error

:find_dp0
set "dp0=%~dp0"
goto :eof

:error
echo.
echo Error: The required program (node.exe) is not found in the specified path.
echo.
pause
