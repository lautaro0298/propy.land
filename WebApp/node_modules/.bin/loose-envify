#!/bin/sh

# Get the basedir using realpath for portability
if command -v realpath &>/dev/null; then
  basedir=$(realpath "$(dirname "$0")")
else
  basedir=$(cd "$(dirname "$0")" && pwd)
fi

# Use $(command -v node) to get the path of node executable in a portable way
if [ -x "$(command -v node)" ] && [ -x "$basedir/../loose-envify/cli.js" ]; then
  exec "$(command -v node)"  "$basedir/../loose-envify/cli.js" "$@"
else
  exec node  "$basedir/../loose-envify/cli.js" "$@"
fi

