@model List<LibreriaClases.DTO.DTOTipoMoneda>
@{

    ViewBag.Title = "Crear paquete de creditos";
    Layout = "~/Views/Shared/MasterPanelAdministrador.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        @if (!String.IsNullOrEmpty(ViewBag.Error))
        {
            <div class="alert alert-danger">
                <button class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                @Html.ValidationSummary(false)
            </div>
        }
    </div>
    <h2>Aquí podras Crear Los paquetes de creditos:</h2>
    <form action="/ABMCredito/CrearPaqueteCredito/" method="post">
        <label for="nombredelpack">Nombre que va a recibir el pack de creditos:</label>
        <input type="text" name="nombredelpack" />
        <label for="cantidad">Cantidad de creditos disponibles</label>
        <input type="number" name="cantidad" />
        <div class="row">
            <div class="col-8">
                <label>Precio</label>
                <input class="col-2" type="number" placeholder="0" min="0" name="Precio" />
                <label>Seleccione el tipo de moneda</label>
                <select name="TipoMoneda">
                    @for (int x = 0; x < Model.Count(); x++)
                    {
                        <option value="@Model.ElementAt(x).tipoMonedaId">@Model.ElementAt(x).denominacionMoneda</option>
                    }
                </select>
            </div>
        </div>
        <div class="col-4 ">
            <button class="btn-danger" type="submit">Aceptar</button>
        </div>
    </form>


</body>
</html>
