@model List<LibreriaClases.DTO.DTO_TP_Y_C>

@{
    ViewBag.Title = "EliminarTipoPropiedadTipoAmbiente";
    Layout = "~/Views/Shared/MasterPanelAdministrador.cshtml";
}

<h2>Eliminar un ambiente a una propiedad que desees.</h2>

@if (!String.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger">
        <button class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        @Html.ValidationSummary(false)
    </div>
}
<div class="container-fluid">
    <div class="row">
        <div class="col">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Propiedad</th>
                        <th>Ambientes</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int x = 0; x < Model.Count; x++)
                    {
                        <tr>
                            <td>
                                @Model.ElementAt(x).dTOTipoPropiedades.nombreTipoPropiedad
                            </td>
                            <td>


                                <p>@Model.ElementAt(x).dTOCaracteristicas.nombreCaracteristica</p>
                            <td><form action="/ABTipoPropiedadTipoCaracteristica/EliminarTipoPropiedadTipoCaracteristica" method="post" value="@Model.ElementAt(x).tipoPropiedadCaracteristicaID"><input type="hidden" name="id" value="@Model.ElementAt(x).tipoPropiedadCaracteristicaID" /><button class="btn btn-danger" type="submit" value="@Model.ElementAt(x).tipoPropiedadCaracteristicaID">Eliminar</button></form></td>
                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    
    <div class="row">
        <div class="col">
            <label id="resultadoOperacion"></label>
        </div>
    </div>
</div>


