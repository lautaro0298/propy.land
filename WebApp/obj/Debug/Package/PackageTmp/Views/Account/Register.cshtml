@model WebApp.Models.RegisterViewModel
@{
    /**/

    ViewBag.Title = "Registrarse";
}

<!--
<h2 class="mt-2 text-info">@ViewBag.Title.</h2>
    -->
    <div class="container">
        <div class="row">
            <div class="col-md-3">

            </div>
            <div class="col-md-6">
                <div class="my-5">
                    <form method="post" action="@Url.Action("Register", "Account")">

                        @Html.AntiForgeryToken()
                        <h4 class="text-center">Cree una nueva cuenta.</h4>
                        <hr />
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="row">

                            <div class="form-group col-md-6">
                                <label for="nombre">Nombre:</label>
                                <input class="form-control" type="text" name="nombre" id="nombre" value="">
                            </div>

                            <div class="form-group col-md-6">
                                <label for="apellido">Apellido</label>
                                <input class="form-control" type="text" name="apellido" id="apellido" value="">
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="numeroTelefono">Teléfono:</label>
                                <input class="form-control" type="number" name="nroTelefono" id="numeroTelefono" value="" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="email">Email:</label>
                                <input class="form-control" type="email" name="email" id="email" value="" />
                            </div>


                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="Password">Clave:</label>
                                <input class="form-control" type="password" name="Password" id="Password" value="" />

                            </div>
                            <div class="form-group col-md-6">
                                <label for="Password">Confirmar Clave:</label>
                                <input class="form-control" type="password" name="ConfirmPassword" id="ConfirmPassword" value="" />
                            </div>
                             <small class="text-info ">Las claves deben tener al menos un carácter que no sea una letra ni un dígito. Las contraseñas deben tener al menos una letra en mayúscula ('A'-'Z')</small>
                        </div>





                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox1" name="permitirSerContactadoPublicante" onclick="valorcheckbox(this);">
                            <label class="form-check-label" for="inlineCheckbox1">Permitir ser notificado.</label>

                        </div>
                        <small class="text-info">Al permitir ser notificado, usted permite que Propy envíe notificaciones a su correo electrónico</small>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox2" name="permitirSerNotificado" onclick="valorcheckbox(this);">
                            <label class="form-check-label" for="inlineCheckbox2">Permitir ser contactado.</label>

                        </div>
                        <small class="text-info">Al permitir ser contactado, usted permite que su contacto aparezca en las búsquedas de los clientes.</small>
                        <hr />
                        <center>
                            <div class="row">
                                <div class="col">
                                    <input type="submit" class="btn btn-outline-success btn-lg btn-block" value="Registrarse" />
                                </div>
                            </div>
                        </center>











                    </form>


                </div>
            </div>
            <div class="col-md-3">

            </div>
        </div>
        
        
        
    </div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script type="text/javascript">
    function valorcheckbox(input) {
        if (input.value == true) {
            input.value = true;
        } else {
            input.value = false;
        }
    }
</script>
