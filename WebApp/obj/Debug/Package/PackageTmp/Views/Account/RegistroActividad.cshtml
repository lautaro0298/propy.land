@model IEnumerable<WebApp.DTO.DTOActividad>

@{
    ViewBag.Title = "RegistroActividad";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Registro de actividad.</h2>
<hr />
@if (Model == null)
{
    <h2>No se han encontrado actividades.</h2>
}
else
{
    <table class="table table-responsive table-light table-bordered" id="dataTable">
        <thead>
            <tr>
                <th><b>Actividad</b></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>El día <b>@item.fechaActividad</b> usted: @item.descripcionActividad</td>
                </tr>
            }
        </tbody>
    </table>
}
