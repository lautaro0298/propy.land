@model WebApp.DTO.DTOListadoPublicacionesPorUsuario
@section Styles{

    <link href="~/Estilos/MisEstilos.css" rel="stylesheet" />
}
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    int contadorPublicaciones = 0;
}
<link href="~/Estilos/MisEstilos.css" rel="stylesheet" />
<h2 class="Titulo">Mis Publicaciones</h2>
<br />
<p>
    
    @Html.ActionLink("¡Crear Nueva Publicación!", "RealizarPublicacion", "Publicacion", new { @class = "btn btn-lg btn-success" })
</p>
<div class="card mb-4">
    <div class="card-header"><i class="fas fa-table mr-1"></i>Mis Publicaciones</div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-dark" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Ubicación</th>
                        <th>Precio</th>
                        <th>Fecha de publicación</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>#</th>
                        <th>Ubicación</th>
                        <th>Precio</th>
                        <th>Fecha de publicación</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </tfoot>
                <tbdoy>
                    @foreach (var item in Model.dtoContenedor)
                    {
                        contadorPublicaciones++;
                        <tr>
                            <td>@contadorPublicaciones</td>
                            <td>@item.ubicacion</td>
                            <td>@item.precio</td>
                            <td>@item.fechaInicioPublicacion</td>
                            <td>@item.estado</td>
                            <td>
                                <div class="btn-group" role="group">
                                    @Html.ActionLink("Estadisticas", "Index", "SolicitarEstadisticaPublicacion", new {publicacionId=item.publicacionId }, new { @class = "btn btn-sm btn-info" })
                                    @Html.ActionLink("Editar", "EditarPublicacion", "Publicacion", new {publicacionId = item.publicacionId }, new { @class = "btn btn-sm btn-primary" })
                                    @Html.ActionLink("Eliminar", "Index", "Home", null, new { @class = "btn btn-sm btn-danger" })
                                </div>
                            </td>
                        </tr>

                    }
                </tbdoy>
            </table>

        </div>
    </div>
</div>


