@model WebApp.ViewModels.NuevaPublicacionViewModel
<script src="~/Scripts/jquery-1.10.2.js"></script>
@{
    /**/

    ViewBag.Title = "NuevaPublicacion";
    Layout = "~/Views/Shared/_PanelControl.cshtml";
}

<h2>NuevaPublicacion</h2>

@Html.ActionLink("Volver", "Index", "Publicacion")
@using (Html.BeginForm("NuevaPublicacion", "Publicacion", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <center>
        <div class="btn btn-success">
            <a style="color:white" href="../images/carga.xlsx">Carga Masiva</a>
        </div>
    </center>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="panel panel-success">
        <div class="panel-heading">
            <h3 class="panel-title">¿Qué tipo de operación va a realizar?</h3>
        </div>
        <div class="panel-body">

            <div class="form-group">
                <h4 class="col-md-3">Seleccione una opción:</h4>
                <div class="col-md-9">
                    @Html.Action("Index", "TipoPublicacion")

                    @Html.ValidationMessageFor(model => model.tipoPublicacion, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">¿Qué tipo de Propiedad va a publicar?</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <h4 class="col-md-7">Seleccione una opción:</h4>
                        <div class="col-md-5">
                            @Html.Action("Index", "TipoPropiedad")
                            @Html.ValidationMessageFor(model => model.tipoPropiedad, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">Tipo de Usuario</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <h4 class="col-md-7">Seleccione una opción:</h4>
                        <div class="col-md-5">
                            @Html.Action("Index", "TipoUser")
                            @Html.ValidationMessageFor(model => model.tipoUsuario, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>


    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Ingrese los datos de ubicación de su propiedad</h3>
        </div>
        <div class="panel-body">

            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(model => model.pais, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-2">
                        @Html.Action("ListarPaises", "Pais")
                        @Html.ValidationMessageFor(model => model.pais, "", new { @class = "text-danger" })
                    </div>
                    @Html.LabelFor(model => model.provincia, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-2">
                        @Html.Action("ListarProvincias", "Provincia")
                        @Html.ValidationMessageFor(model => model.provincia, "", new { @class = "text-danger" })
                    </div>
                    @Html.LabelFor(model => model.localidad, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-2">
                        @Html.Action("ListarLocalidades", "Localidad")
                        @Html.ValidationMessageFor(model => model.localidad, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(model => model.direccion, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.direccion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.direccion, "", new { @class = "text-danger" })
                        <center>
                            <div class="mapouter">
                                <div class="gmap_canvas"><iframe width="376" height="265" id="gmap_canvas" src="https://maps.google.com/maps?q=Universidad%20tecnologica%20nacional%2C%20mendoza&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://www.embedgooglemap.net/blog/nordvpn-coupon-code/">nordvpn free account</a></div>
                                <style>
                                    .mapouter {
                                        position: relative;
                                        text-align: right;
                                        height: 265px;
                                        width: 376px;
                                    }

                                    .gmap_canvas {
                                        overflow: hidden;
                                        background: none !important;
                                        height: 265px;
                                        width: 376px;
                                    }
                                </style>
                            </div>
                        </center>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Ingrese los datos de la propiedad</h3>
        </div>
        <div class="panel-body">
            <div class="form-group">
                @Html.LabelFor(model => model.tipoMoneda, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.tipoMoneda, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.antiguedad, "", new { @class = "text-danger" })
                    <small>Si su propiedad es a estrenar ingrese 0 como años de antiguedad</small>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.precioPropiedad, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.precioPropiedad, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.precioPropiedad, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.antiguedad, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.antiguedad, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.antiguedad, "", new { @class = "text-danger" })
                    <small>Si su propiedad es a estrenar ingrese 0 como años de antiguedad</small>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.superficieCubierta, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.superficieCubierta, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.superficieCubierta, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.superficieTerreno, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.superficieTerreno, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.superficieTerreno, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.nroPlantas, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.nroPlantas, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nroPlantas, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.tipoConstruccion, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.Action("ListarTipoConstrucciones", "TipoConstruccion")
                    @Html.ValidationMessageFor(model => model.tipoConstruccion, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
    </div>

    <h4>Seleccione los Tipos de Ambientes</h4>
    <div class="form-group">
        <div class="col-md-12">
            @Html.Action("ListarTiposAmbiente", "TipoAmbiente")

        </div>
    </div>

    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Extras</h3>
        </div>
        <div class="panel-body">
            @Html.Action("ListarExtras", "Extras")
        </div>
    </div>

    <h4>Seleccione las imagenes</h4>
    <div class="form-group">
        <div class="col-md-12">
            <div class="fileinputs">
                <input type="file" class="file" name="imagenSubida" id="imagenSubida" />
                <div class="fakefile">
                </div>
            </div>
        </div>
    </div>



    <div class="form-group">

        <div>
            @Html.LabelFor(model => model.observaciones, htmlAttributes: new { @class = "control-label" })
            <textarea class="form-control" name="observaciones" rows="10" cols="40">Escribe aquí tus observaciones</textarea>

            @Html.ValidationMessageFor(model => model.precioPropiedad, "", new { @class = "text-danger" })
        </div>
    </div>




    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Crear Publicación" class="btn btn-success" />
        </div>
    </div>
</div>
        }

        @Html.Action("MostrarFechaInicioFinPublicacion", "Publicacion")


