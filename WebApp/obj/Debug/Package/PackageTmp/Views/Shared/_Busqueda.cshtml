<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Búsqueda</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/ActualizarCredito.js"></script>

</head>
<body onpageshow="resetform(); ActualizarCredito();">

    <nav class="navbar navbar-expand-lg bg-dark navbar-dark fixed-top ">
        <div class="container">
            <div class="col-1">
                @Html.ActionLink("Propy", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarbotton">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarbotton">
                <div class="col">
                    <ul class="navbar-nav ">
                        <li class="nav-item mx-lg-2">
                            @Html.ActionLink("Inicio", "Index", "Home", routeValues: null, htmlAttributes: new { @style = "text-decoration:none; color: white;" })
                        </li>
                        <li class="nav-item mx-lg-2">
                            @Html.ActionLink("Acerca de", "About", "Home", routeValues: null, htmlAttributes: new { @style = "text-decoration:none; color: white;" })
                        </li>
                        <li class="nav-item mx-lg-2">
                            @Html.ActionLink("Contacto", "Contact", "Home", routeValues: null, htmlAttributes: new { @style = "text-decoration:none; color: white;" })
                        </li>
                        <li class="nav-item mx-lg-2">
                            @Html.ActionLink("Preguntas Frecuentes", "Frequents", "Home", routeValues: null, htmlAttributes: new { @style = "text-decoration:none; color: white;" })
                        </li>
                    </ul>
                </div>
                <div class="col ">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </nav>

    <div class="container body-content">

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Propy</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("Styles", required: false)
    <script>
        function pulsar(e) {
            tecla = (document.all) ? e.keyCode : e.which;
            return (tecla != 13);
        }

    </script>

</body>
</html>
