@using React.RenderFunctions
<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Propy</title>



    <link href="~/Content/fontawesome-all.min.css" rel="stylesheet" />
    <link href="~/Estilos/MisEstilos.css" rel="stylesheet" />
    <script src="~/Scripts/ActualizarCredito.js" async="async"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>


<body style="line-height: inherit; margin-bottom: 300px;">

    <nav class="navbar navbar-expand-lg bg-dark navbar-dark fixed-top ">
        <div class="container">
            <div class="col-1">
                @Html.ActionLink("Propy", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarbotton">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarbotton">
                <div class="col">
                    <ul class="navbar-nav ">
                        <li class="nav-item mx-lg-2">
                            @Html.ActionLink("Inicio", "Index", "Home", htmlAttributes: new { @style = "text-decoration:none; color: white;" })
                        </li>
                        <li class="nav-item mx-lg-2">
                            @Html.ActionLink("Acerca de", "About", "Home", htmlAttributes: new { @style = "text-decoration:none; color: white;" })
                        </li>
                        <li class="nav-item mx-lg-2">
                            @Html.ActionLink("Contacto", "Contact", "Home", htmlAttributes: new { @style = "text-decoration:none; color: white;" })
                        </li>
                        <li class="nav-item mx-lg-2">
                            @Html.ActionLink("Preguntas Frecuentes", "Frequents", "Home", htmlAttributes: new { @style = "text-decoration:none; color: white;" })
                        </li>
                    </ul>
                </div>
                <div class="col ">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </nav>


    <div>

        @RenderBody()
        
            
            <footer class="Pie" style="box-sizing: border-box;position:fixed;bottom:0;height: 12%;">
                <h4>¡Propy! Creada para satisfacer tus necesidades.</h4>
                <br />
                <div class="row">
                    <div class="col-md-4">
                        <button class="btn btn-outline-dark btn-lg" style="font-size: initial;">¿Qué es Propy?</button>


                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-outline-dark btn-lg" style="font-size: initial;">¿Cómo funciona Propy?</button>

                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-outline-dark btn-lg" style="font-size: initial;">Contacto</button>

                    </div>
                </div>

                <br />
                <p>&copy; @DateTime.Now.Year - Propy</p>
            </footer>
        
    </div>

    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("Styles", required: false)

    @Html.ReactInitJavaScript()

</body>
</html>
