@model IEnumerable<LibreriaClases.DTO.DTOConsultaActividadUsuario>
@{
    ViewBag.Title = "ConsultarActividad";
    Layout = "~/Views/Shared/PanelControl2.cshtml";
}

<div class="container">
    <h2>Mi actvidad en Propy</h2>
    <hr />
    @if (Model.Count() == 0)
    {
        <p>No se registran actividades.</p>
    }
    else
    {
        <table id="dataTable" class="table table-striped">
            <thead>
                <tr>
                    <th>¿Qué he hecho?</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var actividad in Model)
                {
                    <tr>
                        <td>Usted <b>@actividad.descripcionActividad</b> en la fecha <b>@actividad.fechaActividad</b></td>
                    </tr>
                }
            </tbody>
        </table>

    }

</div>

